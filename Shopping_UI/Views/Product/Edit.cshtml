@model Shopping_UI.Models.DTO_s.ProductDto

<h1 class="mt-3">Edit Product</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="Price" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" asp-controller="Product"
                    asp-action="Delete"
                    class="btn btn-danger">
                Delete
            </button>
        </div>

    </form>
}