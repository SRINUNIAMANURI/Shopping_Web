@model Shopping_UI.Models.CustomerDto

<h1>Edit Cutomer Details</h1>

@if(Model is not null)
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">CustomerId</label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="FirstName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" asp-for="LastName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" />
        </div>

        <div class="mt-3">
            <label class="form-label">AddressId</label>
            <input type="text" class="form-control" asp-for="Address.Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Street</label>
            <input type="text" class="form-control" asp-for="Address.Street" />
        </div>

        <div class="mt-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="Address.City" />
        </div>

        <div class="mt-3">
            <label class="form-label">ZipCode</label>
            <input type="text" class="form-control" asp-for="Address.ZipCode" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}